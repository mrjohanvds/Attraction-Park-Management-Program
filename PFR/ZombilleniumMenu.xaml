<Page x:Class="PFR.ZombilleniumMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PFR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zombillenium - Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightBlue">
            <Label Style="{StaticResource titleLabelStyle}" >Que voulez vous faire ?</Label>
        </Border>

        <StackPanel Grid.Row="1">
            <Button Style="{StaticResource buttonChoiceStyle}" Click="Button_Click_Afficher_Personnel">Afficher Personnel</Button>
            <Button Style="{StaticResource buttonChoiceStyle}" Click="Button_Click_Ajouter_Personnel">Ajouter Personnel</Button>
            <Button Style="{StaticResource buttonChoiceStyle}" Click="Button_Click_Afficher_Attraction">Afficher Attraction</Button> 
        </StackPanel>
        
            
    </Grid>
</Page>
