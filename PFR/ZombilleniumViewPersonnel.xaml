<Page x:Class="PFR.ZombilleniumViewPersonnel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PFR"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1300"
      Title="Zombillenium - View Personnel">

    <Grid Margin="5,0,5,5">
        <Grid.Background>
            <ImageBrush ImageSource="background.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightBlue">
            <Label Style="{StaticResource titleLabelChoice}">Liste du personnel</Label>
        </Border>

        <Grid Margin="50" Grid.Row="1">
            <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Loaded="DataGrid_Loaded" />
        </Grid>
    </Grid>
</Page>
