<Page x:Class="PFR.ZombilleniumAddAttraction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PFR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZombilleniumAddAttraction">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="LightBlue">
            <Label Style="{StaticResource titleLabelStyle}" Content="Ajouter une attraction"/>
        </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Name="TypeSP">
            <RadioButton Content="Boutique" GroupName="TypeRadioButton" Checked="Boutique_RadioButton_Checked" Unchecked="Boutique_RadioButton_Unchecked"/>
            <RadioButton Content="DarkRide" GroupName="TypeRadioButton" Checked="DarkRide_RadioButton_Checked" Unchecked="DarkRide_RadioButton_Unchecked"/>
            <RadioButton Content="RollerCoaster" GroupName="TypeRadioButton" Checked="RollerCoaster_RadioButton_Checked" Unchecked="RollerCoaster_RadioButton_Unchecked"/>
            <RadioButton Content="Spectacle" GroupName="TypeRadioButton" Checked="Spectacle_RadioButton_Checked" Unchecked="Spectacle_RadioButton_Unchecked"/>
        </StackPanel>

        <Grid Margin="30,20,10,20" Grid.Row="3" Name="InfosGeneralesGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Name="BesoinSpécifique">
                <RadioButton Content="oui" GroupName="BesoinSpécifiqueButton"/>
                <RadioButton Content="non" GroupName="BesoinSpécifiqueButton"/>

            </StackPanel>
            <Label Style="{StaticResource textBoxLabelStyle}" Grid.Row="0">Besoin spécifique :</Label>
            <Label Style="{StaticResource textBoxLabelStyle}" Grid.Row="3">Nom:</Label>
            <Label Style="{StaticResource textBoxLabelStyle}" Grid.Row="1">Durée Maintenance:</Label>
            <Label Style="{StaticResource textBoxLabelStyle}" Grid.Row="2">Matricule :</Label>
            <Label Style="{StaticResource textBoxLabelStyle}" Grid.Row="4">Fonction :</Label>
            <TextBox Style="{StaticResource textBoxStyle}" Grid.Row="3" Name="NameTextBox"/>
          
            <TextBox Style="{StaticResource textBoxStyle}" Grid.Row="2" Name="MatriculeTextBox"/>

            <TextBox Style="{StaticResource textBoxStyle}" Grid.Row="4" Name="FunctionTextBox"/>
            <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,2.8,0,0" Grid.Column="1" Grid.Row="1"/>
        </Grid>

    </Grid>
</Page>
